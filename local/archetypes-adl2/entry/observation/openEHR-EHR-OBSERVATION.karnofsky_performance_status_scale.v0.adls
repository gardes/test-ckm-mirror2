definition
    OBSERVATION[id1] matches {    -- Karnofsky performance status scale
        data matches {
            HISTORY[id2] matches {
                events cardinality matches {1..*; unordered} matches {
                    EVENT[id3] occurrences matches {0..1} matches {    -- Any point in time event
                        data matches {
                            ITEM_TREE[id4] matches {
                                items cardinality matches {0..*; unordered} matches {
                                    ELEMENT[id5] occurrences matches {0..1} matches {    -- Description
                                        value matches {
                                            DV_ORDINAL[id9001] matches {
                                                [value, symbol] matches {
                                                    [{100}, {[at16]}],
                                                    [{90}, {[at15]}],
                                                    [{80}, {[at14]}],
                                                    [{70}, {[at13]}],
                                                    [{60}, {[at12]}],
                                                    [{50}, {[at11]}],
                                                    [{40}, {[at10]}],
                                                    [{30}, {[at9]}],
                                                    [{20}, {[at8]}],
                                                    [{10}, {[at7]}],
                                                    [{0}, {[at6]}]
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
        protocol matches {
            ITEM_TREE[id17] matches {
                items cardinality matches {0..*; unordered} matches {
                    allow_archetype CLUSTER[id18] matches {     -- Extension
                        include
                            archetype_id/value matches {/.*/}
                    }
                }
            }
        }
    }

