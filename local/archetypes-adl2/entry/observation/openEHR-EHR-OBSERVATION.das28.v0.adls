definition
    OBSERVATION[id1] matches {    -- Disease Activity Score-28 (DAS28)
        data matches {
            HISTORY[id2] matches {
                events cardinality matches {1..*; unordered} matches {
                    POINT_EVENT[id3] occurrences matches {0..1} matches {    -- Point in time
                        data matches {
                            ITEM_TREE[id4] matches {
                                items cardinality matches {0..*; unordered} matches {
                                    ELEMENT[id5] occurrences matches {0..1} matches {    -- Tender joint count
                                        value matches {
                                            DV_COUNT[id9002] matches {
                                                magnitude matches {|0..28|}
                                            }
                                        }
                                    }
                                    ELEMENT[id6] occurrences matches {0..1} matches {    -- Swollen joint count
                                        value matches {
                                            DV_COUNT[id9003] matches {
                                                magnitude matches {|0..28|}
                                            }
                                        }
                                    }
                                    ELEMENT[id7] occurrences matches {0..1} matches {    -- ESR result
                                        value matches {
                                            DV_QUANTITY[id9004] matches {
                                                property matches {[at9000]}    -- Velocity
                                                magnitude matches {|0.0..300.0|}
                                                units matches {"mm/h"}
                                                precision matches {0}
                                            }
                                        }
                                    }
                                    ELEMENT[id8] occurrences matches {0..1} matches {    -- Global health
                                        value matches {
                                            DV_QUANTITY[id9005] matches {
                                                property matches {[at9001]}    -- Qualified real
                                                magnitude matches {|0.0..100.0|}
                                                units matches {"1"}
                                                precision matches {0}
                                            }
                                        }
                                    }
                                    ELEMENT[id9] occurrences matches {0..1} matches {    -- DAS28 score
                                        value matches {
                                            DV_QUANTITY[id9006] matches {
                                                property matches {[at9001]}    -- Qualified real
                                                magnitude matches {|0.0..10.0|}
                                                units matches {"1"}
                                                precision matches {2}
                                            }
                                        }
                                    }
                                    ELEMENT[id16] occurrences matches {0..1} matches {    -- DAS28(3) score
                                        value matches {
                                            DV_QUANTITY[id9007] matches {
                                                property matches {[at9001]}    -- Qualified real
                                                magnitude matches {|0.0..10.0|}
                                                units matches {"1"}
                                                precision matches {2}
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
        protocol matches {
            ITEM_TREE[id10] matches {
                items cardinality matches {0..*; unordered} matches {
                    allow_archetype CLUSTER[id11] matches {     -- Extension
                        include
                            archetype_id/value matches {/.*/}
                    }
                }
            }
        }
    }

